@model Jogo

@{
    ViewData["Title"] = "Cadastrar";
}

@if (@TempData["msg"] != null)
{
    <message mensagem=@(TempData["msg"])></message>
}

<h1>Cadastrar</h1>

<form asp-action="cadastrar">
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DataLancamento"></label>
        <input asp-for="DataLancamento" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="Plataforma"></label>
        <select asp-for="Plataforma" class="form-control"
                asp-items="@Html.GetEnumSelectList<Plataforma>()">
            <option>Selecione</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Genero"></label>
        <select asp-for="GeneroId" class="form-control"
                asp-items="@ViewBag.generos">
            <option>Selecione</option>
        </select>
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-success" />
    <botao valor="Teste"/>
</form>

